<div class="listing">
    <p>{{title}}</p>
    <img src="{{imageUrl}}">
    <h2>Brand: {{brand}}</h2>
    <div class="info">
        <div id="data-info">
            <h3>Seller: {{seller}}</h3>
            <h3>Fuel: {{fuel}}</h3>
            <h3>Year: {{year}}</h3>
            <h3>Price: {{price}} $</h3>
        </div>
            <div id="data-buttons">
                <ul>
                    <li class="action">
                        <a href="#/details/{{_id}}" class="button-carDetails">Details</a>
                        {{#if isAuth}}
                            <a href="#/edit/{{_id}}" class="button-carDetails">Edit</a>
                            <a href="#/delete/{{_id}}" class="button-carDetails">Delete</a>
                        {{/if}}
                    </li>

                </ul>
            </div>
    </div>
</div>
