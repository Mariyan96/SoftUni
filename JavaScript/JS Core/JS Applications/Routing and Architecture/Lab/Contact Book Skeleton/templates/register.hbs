<section id="register">
    <div class="container centered">
        <div class="box">
            <h1>Register</h1>
            <div class="content">
                <form id="register-form" action="#/register" method="post">
                    <label for="newUsername">Username</label>
                    <input name="username" id="newUsername" type="text">

                    <label for="newPassword">Password</label>
                    <input name="password" id="newPassword" type="password">

                    <label for="newPassRep">Repeat Password</label>
                    <input name="repeatedPassword" id="newPassRep" type="password">

                    <label for="newFirstName">First Name</label>
                    <input name="firstName" id="newFirstName" type="text">

                    <label for="newSecondName">Last Name</label>
                    <input name="lastName" id="newLastName" type="text">

                    <label for="newPhone">Phone</label>
                    <input name="phone" id="newPhone" type="number">

                    <label for="newEmail">Email</label>
                    <input name="email" id="newEmail" type="text">

                    <input type="submit" value="Register">
                </form>
            </div>
        </div>
    </div>
</section>